<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Agenda</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-dark text-light">

<nav class="navbar navbar-dark bg-dark px-3">
  <span class="navbar-brand fw-bold">
    <img src="https://www.tomzasureste.com/img/grp_tomza.png" height="28">
    Gas Tomza
  </span>

  <span class="me-3">
    <%= user.nombre || user.usuario %> (<%= user.rol %>)
  </span>

  <a href="/logout" class="btn btn-warning btn-sm">
    Salir
  </a>
</nav>

<div class="container mt-4">

  <h4 class="text-warning mb-3">
    Agenda – <%= fecha.split("-").reverse().join("/") %>
    <% if (vista === "hoy") { %>
      <span class="badge bg-success ms-2">HOY</span>
    <% } %>
  </h4>

  <div class="mb-3">
    <a href="/agenda" class="btn btn-outline-warning btn-sm me-2">Hoy</a>
    <a href="/agenda/manana" class="btn btn-outline-warning btn-sm">Mañana</a>
  </div>

  <div class="table-responsive">
    <table class="table table-light align-middle rounded overflow-hidden">
      <thead class="table-dark">
        <tr>
          <th style="width: 10%">Placa</th>
          <th style="width: 45%">Plan (Taller)</th>
          <th style="width: 15%">Tipo</th>
          <th style="width: 15%">Estado</th>
          <th style="width: 15%"></th>
        </tr>
      </thead>

      <tbody>
        <% agenda.forEach(item => { %>
          <tr>
            <td class="fw-bold">
              <%= item.placa %>
            </td>

            <td>
              <div class="p-2 bg-light rounded border small text-dark" style="max-height: 80px; overflow: hidden;">
                <%= item.plan || 'Sin plan definido' %>
              </div>
            </td>

            <td>
              <span class="badge bg-info">
                <%= item.tipo %>
              </span>
            </td>

            <td>
              <span class="badge bg-secondary">
                <%= item.estado %>
              </span>
            </td>

            <td class="text-end">
              <a href="/mantenimientos/<%= item.id %>" class="btn btn-warning btn-sm">
                Abrir
              </a>
            </td>
          </tr>
        <% }) %>

        <% if (agenda.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center text-muted">
              No hay mantenimientos agendados
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

</div>

</body>
</html>
