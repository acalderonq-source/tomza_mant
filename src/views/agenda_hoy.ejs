<%
  /* =========================
     FECHA COSTA RICA (UTC-6)
     ========================= */
  function formatFecha(fecha){
    const d = new Date(fecha + "T00:00:00");
    const dia = String(d.getDate()).padStart(2,'0');
    const mes = String(d.getMonth()+1).padStart(2,'0');
    const anio = d.getFullYear();
    return `${dia}/${mes}/${anio}`;
  }

  const ahora = new Date();
  ahora.setHours(ahora.getHours() - 6); // Costa Rica

  const hoy = ahora.toISOString().slice(0,10);

  const mananaDate = new Date(ahora);
  mananaDate.setDate(mananaDate.getDate() + 1);
  const manana = mananaDate.toISOString().slice(0,10);
%>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Agenda | Gas Tomza</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg px-3">
  <a class="navbar-brand d-flex align-items-center" href="/dashboard">
    <img
      src="https://www.tomzasureste.com/img/grp_tomza.png"
      alt="Gas Tomza"
      style="height:42px; margin-right:10px;"
    >
    <span class="fw-bold text-white">Gas Tomza</span>
  </a>

  <div class="ms-auto d-flex align-items-center text-white">
    <span class="me-3">
      <%= user.nombre %> (<%= user.rol %>)
    </span>
    <form action="/logout" method="POST">
      <button class="btn btn-sm btn-tomza">Salir</button>
    </form>
  </div>
</nav>

<!-- CONTENIDO -->
<div class="container mt-4">

  <!-- TITULO -->
  <h4 class="mb-3">
    Agenda – <span class="text-warning"><%= formatFecha(fecha) %></span>

    <% if (fecha === hoy) { %>
      <span class="badge bg-success ms-2">HOY</span>
    <% } else if (fecha === manana) { %>
      <span class="badge bg-primary ms-2">MAÑANA</span>
    <% } %>
  </h4>

  <!-- BOTONES RAPIDOS -->
  <div class="d-flex gap-2 mb-3 flex-wrap">
    <a href="/agenda?fecha=<%= hoy %>" class="btn btn-outline-tomza">
      Hoy
    </a>
    <a href="/agenda?fecha=<%= manana %>" class="btn btn-outline-tomza">
      Mañana
    </a>
  </div>

  <!-- TABLA -->
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Placa</th>
          <th>Tipo</th>
          <th>Estado</th>
          <th style="width:140px"></th>
        </tr>
      </thead>
      <tbody>

        <% if (items.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center text-muted">
              No hay mantenimientos para esta fecha
            </td>
          </tr>
        <% } %>

        <% items.forEach(i => { %>
          <tr>
            <td class="fw-bold"><%= i.placa %></td>
            <td><%= i.tipo %></td>
            <td>
              <span class="badge badge-<%= i.estado %>">
                <%= i.estado %>
              </span>
            </td>
            <td>
              <a href="/mantenimientos/<%= i.id %>"
                 class="btn btn-sm btn-tomza w-100">
                Abrir
              </a>
            </td>
          </tr>
        <% }) %>

      </tbody>
    </table>
  </div>

</div>

</body>
</html>
