<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Tomza | Mantenimientos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<nav class="navbar navbar-dark bg-dark px-3">
  <span class="navbar-brand">Tomza - Taller Cartago</span>
  <div class="text-white">
    <%= user.usuario %> (<%= user.rol %>)
    <a href="/logout" class="btn btn-warning btn-sm ms-3">Salir</a>
  </div>
</nav>

<div class="container-fluid mt-4">

  <h3 class="mb-3">ðŸ“‹ Listado de Mantenimientos</h3>

  <!-- BOTONES DE FILTRO -->
  <div class="mb-3">
    <a href="/mantenimientos"
       class="btn btn-outline-dark me-2 <%= !filtro ? 'active' : '' %>">
      Todos
    </a>

    <a href="/mantenimientos?filtro=pendientes"
       class="btn btn-outline-warning me-2 <%= filtro === 'pendientes' ? 'active' : '' %>">
      Pendientes
    </a>

    <a href="/mantenimientos?filtro=realizados"
       class="btn btn-outline-success <%= filtro === 'realizados' ? 'active' : '' %>">
      Realizados
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Placa</th>
          <th>Tipo</th>
          <th>Fecha</th>
          <th>Estado</th>
          <th>EjecuciÃ³n</th>
          <th>Pendiente</th>
          <th style="width:90px">AcciÃ³n</th>
        </tr>
      </thead>
      <tbody>
        <% if (mantenimientos.length === 0) { %>
          <tr>
            <td colspan="7" class="text-center">No hay mantenimientos</td>
          </tr>
        <% } %>

        <% mantenimientos.forEach(m => { %>
          <tr>
            <td><strong><%= m.placa %></strong></td>
            <td><%= m.tipo %></td>
            <td><%= m.fecha_formato %></td>
            <td>
              <span class="badge bg-<%= m.estado === 'CERRADO' ? 'success' : 'secondary' %>">
                <%= m.estado %>
              </span>
            </td>

            <td style="max-width:300px">
              <% if (m.estado === 'CERRADO') { %>
                <%= m.ejecucion || 'â€”' %>
              <% } else { %>
                <span class="text-muted">Pendiente</span>
              <% } %>
            </td>

            <td style="max-width:250px">
              <% if (m.estado === 'CERRADO') { %>
                <%= m.pendiente || 'â€”' %>
              <% } else { %>
                <span class="text-muted">â€”</span>
              <% } %>
            </td>

            <td>
              <a href="/mantenimientos/<%= m.id %>" class="btn btn-warning btn-sm">
                Abrir
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <a href="/dashboard" class="btn btn-secondary mt-3">Volver</a>

</div>

</body>
</html>
