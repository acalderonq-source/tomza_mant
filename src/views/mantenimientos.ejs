<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Tomza | Mantenimientos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<nav class="navbar navbar-dark bg-dark px-3">
  <span class="navbar-brand">Tomza - Taller Cartago</span>
  <div class="text-white">
    <%= user.usuario %> (<%= user.rol %>)
    <a href="/logout" class="btn btn-warning btn-sm ms-3">Salir</a>
  </div>
</nav>

<div class="container mt-4">
  <h3 class="mb-4">ðŸ“‹ Listado de Mantenimientos</h3>

  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Placa</th>
        <th>Tipo</th>
        <th>Fecha</th>
        <th>Estado</th>
        <th style="width:120px">AcciÃ³n</th>
      </tr>
    </thead>
    <tbody>
      <% if (mantenimientos.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center">No hay mantenimientos</td>
        </tr>
      <% } %>

      <% mantenimientos.forEach(m => { %>
        <tr>
          <td><strong><%= m.placa %></strong></td>
          <td><%= m.tipo %></td>
          <td><%= m.fecha_programada.toISOString().slice(0,10) %></td>
          <td>
            <span class="badge bg-<%= m.estado === 'CERRADO' ? 'success' : 'secondary' %>">
              <%= m.estado %>
            </span>
          </td>
          <td>
            <a href="/mantenimientos/<%= m.id %>" class="btn btn-warning btn-sm">
              Abrir
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/dashboard" class="btn btn-secondary">Volver</a>
</div>

</body>
</html>
