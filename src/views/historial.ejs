<%
  function formatFecha(fecha) {
    if (!fecha) return '';
    const d = new Date(fecha);
    const dia = String(d.getDate()).padStart(2, '0');
    const mes = String(d.getMonth() + 1).padStart(2, '0');
    const anio = d.getFullYear();
    return `${dia}/${mes}/${anio}`;
  }
%>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta charset="UTF-8">
  <title>Historial de Mantenimientos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-dark px-3">
  <span class="navbar-brand">Tomza Â· Taller Cartago</span>
  <a href="/dashboard" class="btn btn-outline-light btn-sm">Volver</a>
</nav>

<div class="container mt-4">

  <h3 class="mb-3">Historial por placa y fecha</h3>

  <form method="GET" action="/mantenimientos" class="row g-2 mb-4">

    <div class="col-md-3">
      <input
        type="text"
        name="placa"
        class="form-control"
        placeholder="Placa (opcional)"
        value="<%= placa %>"
      >
    </div>

    <div class="col-md-3">
      <input
        type="date"
        name="fecha_desde"
        class="form-control"
        value="<%= fecha_desde %>"
      >
    </div>

    <div class="col-md-3">
      <input
        type="date"
        name="fecha_hasta"
        class="form-control"
        value="<%= fecha_hasta %>"
      >
    </div>

    <div class="col-md-2">
      <button class="btn btn-primary w-100">
        Buscar
      </button>
    </div>

  </form>

  <% if (items.length === 0) { %>
    <div class="alert alert-warning">
      No hay resultados con los filtros seleccionados.
    </div>
  <% } %>

  <% items.forEach(item => { %>
    <div class="card shadow-sm mb-3">
      <div class="card-body">

        <div class="d-flex justify-content-between">
          <div>
            <b><%= item.placa %></b> |
            <%= formatFecha(item.fecha_programada) %> |
            <span class="badge bg-secondary"><%= item.tipo %></span>
            <span class="badge bg-dark"><%= item.estado %></span>
          </div>
          <a href="/mantenimientos/<%= item.id %>" class="btn btn-sm btn-outline-primary">
            Abrir
          </a>
        </div>

        <% if (item.plan_texto) { %>
          <hr>
          <b>Plan:</b>
          <pre class="mb-0"><%= item.plan_texto %></pre>
        <% } %>

        <% if (item.realizado_texto) { %>
          <hr>
          <b>Realizado:</b>
          <pre class="mb-0"><%= item.realizado_texto %></pre>
        <% } %>

        <% if (item.pendientes_texto) { %>
          <hr>
          <b>Pendientes:</b>
          <pre class="mb-0"><%= item.pendientes_texto %></pre>
        <% } %>

      </div>
    </div>
  <% }) %>

</div>

</body>
</html>
