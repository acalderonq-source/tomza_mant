<!-- PLAN TALLER -->
<div class="card mb-3">
  <div class="card-header bg-dark text-white">
    Plan (Taller)
  </div>
  <div class="card-body">

    <% if (['ADMIN','TALLER'].includes(user.rol)) { %>

      <form
        method="POST"
        action="/mantenimientos/<%= mantenimiento.id %>/plan"
      >
        <div class="mb-3">
          <textarea
            name="plan"
            class="form-control"
            rows="3"
            placeholder="Describa el plan de mantenimiento"
            required
          ><%= mantenimiento.plan || '' %></textarea>
        </div>

        <button class="btn btn-primary btn-sm">
          Guardar plan
        </button>
      </form>

    <% } else { %>

      <p><%= mantenimiento.plan || 'No definido' %></p>

    <% } %>

  </div>
</div>
